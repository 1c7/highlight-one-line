{
	"name"				: "Highlight Single Line",
	"version"			: "1.0",
	"description"		: "help you read",
	"manifest_version"	: 2,
	"icons"				: {"128": "images/icon.png"},

	"browser_action"	: {
		"default_icon"	: "images/icon.png"
		// "default_popup" : "html/popup.html"
	},

	"content_scripts"	: [{
		"matches"			: [ "http://*/*","https://*/*"],
		"exclude_globs"		: [ "*.jpg","*.jpeg","*.gif","*.png","*.bmp","*.webp",
								"*.css","*.swf","*.js","*.zip","*.rar","*.tar","*.tar.gz","*.tgz","*.tar.bz2","*.tbz2",
								"*.doc","*.docx","*.ppt","*.pptx","*.xls","*.xlsx","*.pdf","*.xml","*.txt",
								"*.mpg","*.mpeg","*.qt","*.mp4","*.m4v","*.m4a","*.mp3","*.ogv","*.ogm","*.ogg","*.oga","*.webm","*.wav",
								"*.","*." ],
		// "css"				: [ "css/inject.css" ],
		"js"				: [ "jquery-2.2.3.min.js" , "content_script.js" ],
		"run_at" 			: "document_end"
	}],
	"permissions"		: [ 
		"tabs",
	    "http://*/*",
    	"https://*/*"
	]
}